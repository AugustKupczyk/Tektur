<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
        <title>Agregar Producto</title>
        <link href="/css/register.css" rel="stylesheet">
        <link href="/css/agregar-producto.css" rel="stylesheet">
        <link href="/css/header.css" rel="stylesheet">
</head>

<body>

    <header>
        <%- include("./partials/header") %>
    </header>

    <main>
        <p>Agregar productos</p>
        <form class="form-agregar-producto" action="/products/menu" method="post" enctype="multipart/form-data">
            <h4>Complete el detalle del nuevo producto:</h4>
            <input type="text" name="name" id="nombre-producto" placeholder="Nombre del producto">
            <p class="error" style="color: red;"></p>
            <label for="category" class="form-label">Categoría:</label>
            <select name="category" id="category" class="form-input">
                <option value="1">Tapeo</option>
                <option value="2">Burgers</option>
                <option value="3">Sandwiches</option>
                <option value="4">Sin Tacc</option>
                <option value="5">Vegano</option>
                <option value="6">Cervezas</option>
                <option value="7">Tragos y Gaseosas</option>
            </select>
            <input type="text" name="description" id="descripcion-producto" placeholder="Descripción del producto">
            <p class="error" style="color: red;"></p>
            <input type="text" name="price" id="" placeholder="Precio del producto">
            <h4>Seleccione la foto del nuevo producto:</h4>
            <input type="file" multiple accept=".jpg, .jpeg, .png" name="image" id="img">

            <% if (errors && errors.length> 0) { %>
                <div class="error-messages">
                    <ul>
                        <% errors.forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }); %>
                    </ul>
                </div>
                <% } %>
                    <button id="enviar" disabled type="submit">Agregar</button>
        </form>
    </main>

<script src="/js/createProductValidation.js"></script>
</body>

</html>